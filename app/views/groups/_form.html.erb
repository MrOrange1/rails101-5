<%= form_for @group do |f| %>

<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "电影名称", :class => "string optional control-label" %>
    <%= f.text_field :name, :class => "string optional form-control" %>
  </div>

  <div class="form-group string optional">
    <%= f.label "你的评论", :class => "string optional control-label" %>
    <%= f.text_area :description, :class => "string  optional form-control" %>
  </div>

<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
